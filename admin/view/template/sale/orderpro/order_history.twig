{% if error %}
<div class="alert alert-danger"><i class="fa fa-check-circle"></i> {{ error }}<button type="button" class="close" data-dismiss="alert" aria-label="Close">&times;</button></div>
{% endif %}
{% if success %}
<div class="alert alert-success"><i class="fa fa-check-circle"></i> {{ success }}<button type="button" class="close" data-dismiss="alert" aria-label="Close">&times;</button></div>
{% endif %}
<table class="table table-history">
	<thead>
		<tr>
			<td class="history-date">{{ column_date }}</td>
			<td class="history-status">{{ column_status }}</td>
			<td class="history-comment">{{ column_comment }}</td>
			<td class="history-notify"><span class="hidden-xs">{{ column_notify }}</span><i class="fa fa-envelope visible-xs" aria-hidden="true"></i></td>
		</tr>
	</thead>
	<tbody>
	{% if histories %}
		{% for history in histories %}
		<tr>
			<td class="text-center" nowrap>{{ history['date_added'] }}</td>
			<td class="text-left">{{ history['status'] }}</td>
			<td class="text-left">{{ history['comment'] }}</td>
			<td class="text-center">{{ history['notify'] }}</td>
		</tr>
		{% endfor %}
	{% else %}
		<tr>
			<td class="text-center" colspan="4">{{ text_no_results }}</td>
		</tr>
	{% endif %}
	</tbody>
</table>
<div class="pagination-block">
	<div class="col-sm-6 text-left">{{ pagination }}</div>
	<div class="col-sm-6 text-right pagination-results">{% if pagination %}{{ results }}{% endif %}</div>
</div>