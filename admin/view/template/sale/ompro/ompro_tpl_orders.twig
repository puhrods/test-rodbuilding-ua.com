							<option value="0" {% if (template['joystick_status'] is defined and template['joystick_status'] == '0') %} selected="selected"{% endif %}>{{ text_disabled }}</option>
						</select>
					  </div>
					</div>
				  </div>
				</div>
			  </div>

			  <div class="panel-group">
