{{ header }}{{ column_left }} 
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
    <h1>{{ heading_title }}</h1>
    <ul class="breadcrumb">
      {% for breadcrumb in breadcrumbs %} 
      <li><a href="{{ breadcrumb['href'] }}">{{ breadcrumb['text'] }}</a></li>
      {% endfor %} 
    </ul>
    </div>
  </div>
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="nav navbar-nav navbar-left">
      {% for nav in navs %} 
      <a href="{{ nav['href'] }}" class="btn btn-default navbar-btn {{ nav['active'] }}">{{ nav['text'] }}</a>
      {% endfor %} 
      </div>
    </div>
  </nav>  
  <div class="container-fluid">
    {% if (error_warning) %} 
    <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }} 
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %} 
    {% if (success) %} 
    <div class="alert alert-success"><i class="fa fa-check-circle"></i> {{ success }} 
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %} 
	      <div class="pull-right">
        <button type="submit" form="form-seo_manager" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
<br style="clear:both" />
    <div class="panel panel-default">
	
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-puzzle-piece"></i>{{ heading_title }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-seo_manager" class="form-horizontal">
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-separator">{{ entry_separator }}</label>
            <div class="col-sm-10">
              <select name="slasoft_seo_manager_separator" id="input-separator" class="form-control">
			  {% for separator in separators %}
                {% if slasoft_seo_manager_separator == separator.value %}
					{% set selected = 'selected="selected"' %}
				{% else %}
					{% set selected = '' %}
				{% endif %}
                <option value="{{ separator.value}}" {{ selected }}>{{ separator.text }}</option>
			  {% endfor %}
              </select>
            </div>
          </div>
          <div class="form-group">
          	<label class="col-sm-2 control-label" for="input-secret">{{ entry_secret }}</label>
          	<div class="col-sm-10 form-inline">
          		<input type="text" name="slasoft_seo_manager_secret" id="input-secret" class="form-control" value="{{ slasoft_seo_manager_secret }}" />
          		<button onclick="generate()" type="button" class="btn btn-primary">{{ button_generate }}</button>
            	<div>
                <span class="text-danger">
                {{ text_attention_generator }} 
            	</span>
            	</div>
          	</div>

          </div>
          <div class="form-group">
            <label  class="col-sm-2 control-label"> {{ text_example_cron }} </label>
            <div class="col-sm-10">
          		Example: wget -O - -q -t 1	&quot;{{ cron_path }}&amp;secret=<span id="secret_addr">{{ slasoft_seo_manager_secret }}</span>&quot;
          	</div>
          </div>
		  
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-limit">{{ entry_limit }}</label>
            <div class="col-sm-10">
			<input name="slasoft_seo_manager_limit" value="{{ slasoft_seo_manager_limit }}" class="form-control" />
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-limit_url">{{ entry_limit_url }}</label>
            <div class="col-sm-10">
			<input name="slasoft_seo_manager_limit_url" value="{{ slasoft_seo_manager_limit_url }}" class="form-control" />
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-dublicate">{{ entry_dubplicate }}</label>
            <div class="col-sm-10">
              <select name="slasoft_seo_manager_dublicate" id="input-dublicate" class="form-control">
			  {% for dublicate in duplacaties %}
                {% if slasoft_seo_manager_dublicate == dublicate.value %}
					{% set selected = 'selected="selected"' %}
				{% else %}
					{% set selected = '' %}
				{% endif %}
                <option value="{{ dublicate.value}}" {{ selected }}>{{ dublicate.text }}</option>
			  {% endfor %}
              </select>
            </div>
          </div>
        </form>

      </div>
    </div>
  </div>
</div>
<script type="text/javascript"><!--
function generate() {
	var rnd = Math.random().toString(36).slice(2, 7) + Math.random().toString(36).slice(2, 7) + Math.random().toString(36).slice(2, 5) + Math.random().toString(36).slice(2, 5);
	$('#input-secret').val(rnd);
	$('#secret_addr').text(rnd);
}
</script>
{{ footer }}