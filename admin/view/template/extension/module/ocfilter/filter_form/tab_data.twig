<div class="form-group">
  <label class="col-sm-3 control-label">{{ entry_suffix }}</label>
  <div class="col-sm-3">
    {% for language in languages %}
    <div class="input-group">
      <span class="input-group-addon"><img src="{{ language.image }}" title="{{ language.name }}" /></span>
      <input type="text" name="filter_description[{{ language.language_id }}][suffix]" maxlength="32" value="{{ filter_description[language.language_id] ? filter_description[language.language_id].suffix : '' }}" class="form-control" />
    </div>
    {% if error_suffix[language.language_id] %}
    <div class="text-danger">{{ error_suffix[language.language_id] }}</div>
    {% endif %}
    {% endfor %}
  </div>
  <div class="col-sm-offset-3 col-sm-9">
    <p class="help-block">{{ help_suffix }}</p>
  </div>                
</div>
<div class="form-group">
  <label class="col-sm-3 control-label">{{ entry_description }}</label>
  <div class="col-sm-3">
    {% for language in languages %}
    <div class="input-group">
      <span class="input-group-addon"><img src="{{ language.image }}" title="{{ language.name }}" /></span>
      <textarea name="filter_description[{{ language.language_id }}][description]" rows="2" maxlength="255" class="form-control">{{ filter_description[language.language_id] ? filter_description[language.language_id].description : '' }}</textarea>
    </div>
    {% if error_description[language.language_id] %}
    <div class="text-danger">{{ error_description[language.language_id] }}</div>
    {% endif %}
    {% endfor %}
  </div>
  <div class="col-sm-offset-3 col-sm-9">
    <p class="help-block">{{ help_description }}</p>
  </div>      
</div>
<div class="form-group">
  <label class="col-sm-3 control-label">{{ entry_store }}</label>
  <div class="col-sm-9">
    <div class="well well-sm" style="height: 100px; overflow: auto;">
      {% for store in stores %}
      <div class="checkbox">
        <label>
          {% if store.store_id in filter_store %}
          <input type="checkbox" name="filter_store[]" value="{{ store.store_id }}" checked="checked" /> {{ store.name }}
          {% else %}
          <input type="checkbox" name="filter_store[]" value="{{ store.store_id }}" /> {{ store.name }}
          {% endif %}
        </label>
      </div>
      {% endfor %}
    </div>
  </div>
</div>