{{ header }}{{ column_left }}
<div id="content">
    <div class="container-fluid h-editor">
        <div id="panel_top" class="affix col-sm-12">
            <div class="text-title text-center"><i class="fa fa-opencart" aria-hidden="true"></i>
                <span class="win-title">{{ hyper_discount_name }}</span>
                <hr class="ht-min">
                <span class="ht-title">{{ hyper_discount_title }}</span>
            </div>
            <h1 data-toggle="tooltip" data-placement="bottom" title="{{ users_discount_text }}">{{ user_discount['name'][config_language_id] }}</h1>
            <div id="panel_tops" class="pull-right">
                <button type="button" onclick="Apply();" data-toggle="tooltip" data-placement="bottom" class="btn btn-primary memory-button" title="{{ button_apply }}"><i class="fa fa-check-circle-o"></i></button>
                <button type="submit" form="users_discount_form" data-toggle="tooltip" data-placement="bottom" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
                <a href="{{ cancel }}" data-toggle="tooltip" data-placement="bottom" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
            </div>
        </div>
        <div class="panel panel-default col-sm-12">
            {% if error_warning %}
            <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
              <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
            {% endif %}
            
            <div class="panel-heading">
                <h3><i class="fa fa-sliders" aria-hidden="true"></i> {{ heading_action_text }}</h3>
                <button form="help_modals" class="pull-right hm-help btn btn-primary btn-sm" data-toggle="modal" data-target="#Users_Form_Modal">
                    <i class="fa fa-info" aria-hidden="true"></i> - INFO
                </button>
            </div>
            <div class="panel-body top-pad">
                <div class="col-sm-12">
                    <form action="{{ action }}" method="post" enctype="multipart/form-data" id="users_discount_form" class="form-horizontal">
                        <input type="hidden" value="{{ user_discount['discount_id'] }}" name="user_discount[discount_id]">

                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <td class="text-center " style="width: 25%;">
                                        <label class="control-label">
                                            <span data-toggle="tooltip" title="" data-original-title="{{ entry_title_titles }}">
                                                {{ entry_title }} 
                                            </span>
                                        </label>
                                    </td>
                                    <td class="text-center" style="width: 75%;">
                                        <label class="control-label">
                                            <span data-toggle="tooltip" title="" data-original-title="{{ entry_description_titles }}">
                                                {{ entry_description }} 
                                            </span>
                                        </label>
                                    </td>
                                </tr>
                            </thead>
                            <tbody>
                                <tr class="text-center">
                                    <td class="text-center">
                                        {% for language in languages %} 
                                        {% if (error_name[language['language_id']] is defined) %} 
                                        <div class="text-danger">{{ error_name[language['language_id']] }}</div>
                                        {% endif %} 
                                        <div class="input-group pull-left"><span class="input-group-addon"><img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}" /></span>
                                            <input type="text" name="user_discount[name][{{ language['language_id'] }}]"
                                                   value="{{ user_discount['name'][language['language_id']] is defined ? user_discount['name'][language['language_id']] : '' }}" class="form-control" />
                                        </div>
                                        {% endfor %} 
                                    </td>
                                    <td class="text-center">
                                        <textarea style="resize:vertical;" name="user_discount[description]" class="form-control">{{ user_discount['description'] }}</textarea>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <legend>
                            {{ settings_text }} 
                            <button form="help_modals" class="pull-right hm-help btn btn-primary btn-sm" data-toggle="modal" data-target="#Users_One_Modal">
                                <i class="fa fa-info" aria-hidden="true"></i> - {{ help_name }} 
                            </button>
                        </legend>
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <td class="hidden text-center editor">
                                        <label class="control-label">
                                            <span data-toggle="tooltip" title="" data-original-title="{{ entry_users_variants_titles }}">
                                                {{ entry_users_variants }} 
                                            </span>
                                        </label>
                                    </td>
                                    <td class="text-center editor">
                                        <label class="control-label">
                                            <span data-toggle="tooltip" title="" data-original-title="{{ entry_shops_titles }}">
                                                {{ entry_shops }} 
                                            </span>
                                        </label>
                                    </td>
                                    <td class="text-center editor">
                                        <label class="control-label">
                                            <span data-toggle="tooltip" title="" data-original-title="{{ entry_geo_titles }}">
                                                {{ entry_geo }} 
                                            </span>
                                        </label>
                                    </td>
                                    <td class="hidden text-center editor">
                                        <label class="control-label">
                                            <span data-toggle="tooltip" title="" data-original-title="{{ entry_users_groups_titles }}">
                                                {{ entry_users_groups }} 
                                            </span>
                                        </label>
                                    </td>
                                    <td class="text-center editor">
                                        <label class="control-label">
                                            <span data-toggle="tooltip" title="" data-original-title="{{ entry_guest_titles }}">
                                                {{ entry_guest }} 
                                            </span>
                                        </label>
                                    </td>
                                    <td class="text-center editor">
                                        <label class="control-label">
                                            <span data-toggle="tooltip" title="" data-original-title="{{ entry_client_group_titles }}">
                                                {{ entry_client_group }} 
                                            </span>
                                        </label>
                                    </td>
                                    <td class="text-center"></td>
                                    <td class="text-center mini-style">
                                        <label class="control-label">
                                            <span data-toggle="tooltip" title="" data-original-title="{{ users_price_correction_titles }}">
                                                <i class="fa fa-exchange" aria-hidden="true"></i>
                                            </span>
                                        </label>
                                    </td>
                                    <td class="text-center mini-style"></td>
                                </tr>
                            </thead>
                            <tbody>
                                <tr class="text-center">

                                    <td class="text-center editor">
                                        <div class="input-group pull-left">
                                            <input class="bootstrap-switcher form-control" type="checkbox" value="1" id='shop_settings'
                                                   name="user_discount[shops_all]" data-size="small" data-on-color="success"
                                                   {% if (user_discount['shops_all'] == 1) %} {{ 'checked' }}{% endif %}
                                                   data-on-text="ALL" data-off-text="EDIT">
                                        </div>
                                        <a id='shop_settings_link' href="{{ edit_shops_list }}"
                                           {% if (user_discount['shops_all'] == 1 ) %} {{ 'disabled="true"' }}{% endif %}
                                           data-toggle="tooltip" title="{{ button_edit_shops_list }}" class="btn btn-primary"><i class="fa fa-pencil"></i></a>
                                    </td>
                                    <td class="text-center editor">
                                        <div class="input-group pull-left">
                                            <input class="bootstrap-switcher form-control" type="checkbox" value="1" id='geo_settings'
                                                   name="user_discount[geos_all]" data-size="small" data-on-color="success"
                                                   {% if (user_discount['geos_all'] == 1) %} {{ 'checked' }}{% endif %}
                                                   data-on-text="ALL" data-off-text="EDIT">
                                        </div>
                                        <a href="{{ edit_geo_list }}" id='geo_settings_link' 
                                           {% if (user_discount['geos_all'] == 1) %} {{ 'disabled="true"' }}{% endif %}
                                           data-toggle="tooltip" title="{{ button_edit_geo_list }}" class="btn btn-primary"><i class="fa fa-pencil"></i></a>
                                    </td>
                                    <td class="text-center midi">
                                        <div class="text-center">
                                            <input class="bootstrap-switcher form-control" type="checkbox" value="1" id='guests'
                                                   name="user_discount[guests]" data-size="small" data-on-color="success"
                                                   {% if (user_discount['guests'] is defined and user_discount['guests'] == 1) %} {{ 'checked' }}{% endif %}
                                                   data-on-text="YES" data-off-text="NO">
                                        </div>
                                    </td>
                                    <td class="text-center">

                                        <div class="input-group pull-left">
                                            <input class="bootstrap-switcher form-control " type="checkbox" value="1" id='customers_settings'
                                                   name="user_discount[customers_all]" data-size="small" data-on-color="success"
                                                   {% if (user_discount['customers_all'] is defined and user_discount['customers_all'] == 1) %} {{ 'checked' }}{% endif %}
                                                   data-on-text="ALL" data-off-text="EDIT">
                                        </div>
                                        <a href="{{ edit_client_group }}" id='customers_settings_link'
                                           data-toggle="tooltip" title="{{ button_client_group_list }}" class="btn btn-primary"><i class="fa fa-pencil"></i></a>
                                    </td>
                                    <td class="text-center"></td>
                                    <td class="text-center mini-style">
                                        <div class="text-center group">
                                            <input class="bootstrap-switcher form-control" type="checkbox" value="1"
                                                   name="user_discount[correction]" id='correction' data-size="small" data-on-color="success"
                                                   {% if (user_discount['correction'] is defined and user_discount['correction'] == 1) %} {{ 'checked' }}{% endif %}
                                                   data-on-text="MAIN" data-off-text="GROUP">
                                        </div>
                                    </td>
                                    <td></td>
                                </tr>
                            </tbody>
                        </table>
                        <legend>
                            {{ discount_editor_text }}
                            <button form="help_modals" class="pull-right hm-help btn btn-primary btn-sm" data-toggle="modal" data-target="#Users_Two_Modal">
                                <i class="fa fa-info" aria-hidden="true"></i> - {{ help_name }} 
                            </button>
                        </legend>
                        <table id="discount_editor" class="table table-striped table-bordered table-hover num">
                            <thead>
                                <tr>
                                    <td class="text-center micro-style">№</td>
                                    <td class="text-center editor">
                                        <label class="control-label">
                                            <span data-toggle="tooltip" title="" data-original-title="{{ entry_discount_percent_titles }}">
                                                {{ entry_discount_percent }} 
                                            </span>
                                        </label>
                                    </td>
                                    <td class="text-center data-style">
                                        <label class="control-label">
                                            <span data-toggle="tooltip" title="" data-original-title="{{ entry_date_titles }}">
                                                {{ entry_date }} 
                                            </span>
                                        </label>
                                    </td>
                                    <td class="text-center editor">
                                        <label class="control-label">
                                            <span data-toggle="tooltip" title="" data-original-title="{{ entry_product_group_titles }}">
                                                {{ entry_product_group }} 
                                            </span>
                                        </label>
                                    </td>
                                    <td class="text-center">
                                        <label class="control-label">
                                            <span data-toggle="tooltip" title="" data-original-title="{{ entry_discounts_titles }}">
                                                {{ entry_discounts }} 
                                            </span>
                                        </label>
                                    </td>
                                    <td class="text-center">
                                        <label class="control-label">
                                            <span data-toggle="tooltip" title="" data-original-title="{{ entry_stock_titles }}">
                                                {{ entry_stock }} 
                                            </span>
                                        </label>
                                    </td>

                                    <td class="text-center mini-style">
                                        <label class="control-label">
                                            <span data-toggle="tooltip" title="" data-original-title="{{ entry_discount_editor_status_titles }}">
                                                {{ entry_discount_editor_status }} 
                                            </span>
                                        </label>
                                    </td>
                                    <td class="text-center mini-style">
                                        <label class="control-label">
                                            <span data-toggle="tooltip" title="" data-original-title="{{ column_delete_titles }}">
                                                {{ column_delete }} 
                                            </span>
                                        </label>
                                    </td>
                                </tr>
                            </thead>
                            <tbody>
                                {% set users_discount_row = 1 %} 
                                {% if (user_discount['discount_editor'] is defined) %}
            {% for discount_editor in user_discount['discount_editor'] %} 
                <tr id="users_discount_row{{ users_discount_row }}">
                            <td class="for-titles">
                                <label class="control-label">
                                  <span data-toggle="tooltip" title="" data-original-title="
                                  {% set str = user_discount['description'] %}
                                  {% set str_arr =  str|split('#') %}
                                  {{ str_arr[users_discount_row] is defined ?
                                  str_arr[users_discount_row] : constant('false') }}"><b id="numb"></b></span>
                                </label>
                                <input type="hidden" name="user_discount[discount_editor][{{ users_discount_row }}][editor_id]" value="{{ users_discount_row }}" />
                                <input type="hidden" name="user_discount[discount_editor][{{ users_discount_row }}][id]" value="{{ discount_editor.id }}" />
                            </td>
                            <td class="text-center">
                              <div class="input-group pull-left">
                                <input type="text" name="user_discount[discount_editor][{{ users_discount_row }}][discount_percent]"
                                       value="{{ discount_editor['discount_percent'] is defined ? discount_editor['discount_percent'] : '' }}" class="form-control text-right pull-left hd-md" style="color: red"/>
                                <select name="user_discount[discount_editor][{{ users_discount_row }}][discount_type]" class="form-control pull-left hd-md" >
                                    {% for order_status_value in array_discount_types %}
                                    {% if (discount_editor['discount_type'] is defined and discount_editor['discount_type'] == order_status_value) %}
                                        <option value="{{ order_status_value }}" selected="selected">{{ order_status_value }}</option>
                                    {% else %} 
                                        <option value="{{ order_status_value }}" >{{ order_status_value }}</option>
                                    {% endif %} 
                                    {% endfor %} 
                                </select>
                              </div>
                            </td>
                            <td class="text-center">
                                <div class="input-group date">
                                    <input type="text" name="user_discount[discount_editor][{{ users_discount_row }}][start_date]" placeholder="{{ entry_date_start }}"
                                           value="{{ discount_editor['start_date'] }}" data-date-format="YYYY-MM-DD" id="input-date-available" class="form-control"  style="color: blue"/>
                                    <span class="input-group-btn">
                                        <button class="btn btn-default" type="button"><i class="fa fa-calendar"></i></button>
                                    </span>
                                </div>
                                <div class="input-group date">
                                    <input type="text" name="user_discount[discount_editor][{{ users_discount_row }}][end_date]" placeholder="{{ entry_date_end }}"
                                           value="{{ discount_editor['end_date'] }}" data-date-format="YYYY-MM-DD" id="input-date-available" class="form-control" style="color: darkred"/>
                                    <span class="input-group-btn">
                                        <button class="btn btn-default" type="button"><i class="fa fa-calendar"></i></button>
                                    </span>
                                </div>
                            </td>
                            <td class="text-center">
                                <div class="input-group pull-left local-checkbox-readonly">
                                    <input class="bootstrap-switcher form-control product_settings" type="checkbox" value="1"
                                           name="user_discount[discount_editor][{{ users_discount_row }}][products_all]" data-size="small" data-on-color="success"
                                           {% if (discount_editor['products_all'] is defined and discount_editor['products_all'] == 1) %} {{ 'checked' }}{% endif %}
                                           data-on-text="ALL" data-off-text="EDIT">
                                </div>
                                <a  href="{{ discount_editor['product_group_href'] is defined ? discount_editor['product_group_href'] : '#' }}"
                                    {% if (discount_editor['products_all'] is defined and discount_editor['products_all'] == 1) %} {{ 'disabled="true"' }}{% endif %}
                                    data-toggle="tooltip" title="{{ button_product_group_list }}" class="btn btn-primary product_settings_link"><i class="fa fa-pencil"></i></a>
                            </td>

                            <td class="text-center">
                                <select name="user_discount[discount_editor][{{ users_discount_row }}][discount_variant_discount]" class="form-control">
                                    {% for discount_key,discount_value in array_discounts %}
                                {% if (discount_editor['discount_variant_discount'] is defined and discount_key == discount_editor['discount_variant_discount']) %}
                                    <option value="{{ discount_key }}" selected="selected">{{ discount_value }}</option>
                                {% else %} 
                                    <option value="{{ discount_key }}" >{{ discount_value }}</option>
                                {% endif %} 
                                    {% endfor %} 
                                </select>
                            </td>
                            <td class="text-center">
                                <select name="user_discount[discount_editor][{{ users_discount_row }}][discount_variant_specials]" class="form-control">
                                    {% for specials_key,specials_value in array_specials %}
                                {% if (discount_editor['discount_variant_specials'] is defined and specials_key == discount_editor['discount_variant_specials']) %}
                                    <option value="{{ specials_key }}" selected="selected">{{ specials_value }}</option>
                                {% else %} 
                                    <option value="{{ specials_key }}" >{{ specials_value }}</option>
                                {% endif %} 
                                    {% endfor %} 
                                </select>
                            </td>
                            <td class="text-center">
                                <div class="input-group pull-left">
                                    <input class="bootstrap-switcher form-control" type="checkbox" value="1"
                                           name="user_discount[discount_editor][{{ users_discount_row }}][status]" data-size="small" data-on-color="success"
                                           {% if (discount_editor['status'] is defined and discount_editor['status'] == 1) %} {{ 'checked' }}{% endif %} >
                                </div>
                            </td>
                            <td class="text-center"><button type="button" onclick="$('#users_discount_row{{ users_discount_row }}').remove();" data-toggle="tooltip" title="{{ button_remove }}" class="btn btn-danger"><i class="fa fa-minus-circle"></i></button></td>

                            </tr>
                            {% set users_discount_row = users_discount_row + 1 %} 
                            {% endfor %} 
                            {% endif %} 
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="7"></td>
                                    <td class="text-center">
                                        <button type="button" onclick="addDiscountEditor();" data-toggle="tooltip" title="{{ button_add }}" class="btn btn-primary">
                                            <i class="fa fa-plus-circle"></i>
                                        </button>
                                    </td>
                                </tr>
                            </tfoot>
                        </table>
                    </form>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <hr>
                    <div class="panel-heading text-center ">
                        <button form="help_modals" class="hm-info btn btn-primary btn-sm" data-toggle="modal" data-target="#Authors_Modal">
                            {{ description_author_start }} 
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
