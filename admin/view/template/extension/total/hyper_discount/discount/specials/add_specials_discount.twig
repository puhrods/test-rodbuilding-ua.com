{{ header }}{{ column_left }}
<div id="content">
    <div class="container-fluid h-editor">
        <div id="panel_top" class="affix col-sm-12">
            <div class="text-title text-center"><i class="fa fa-opencart" aria-hidden="true"></i>
                <span class="win-title">{{ hyper_discount_name }}</span>
                <hr class="ht-min">
                <span class="ht-title">{{ hyper_discount_title }}</span>
            </div>
            <h1>{{ add_name }}</h1>
            <div id="panel_tops" class="pull-right">
                <button type="submit" form="specials_discount_form" data-toggle="tooltip" data-placement="bottom" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
                <a href="{{ cancel }}" data-toggle="tooltip" data-placement="bottom" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
            </div>
        </div>
        <div class="panel panel-default col-sm-12">
            {% if error_warning %}
            <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
              <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
            {% endif %}
            
            <div class="panel-heading">
                <h3><i class="fa fa-sliders" aria-hidden="true"></i> {{ heading_action_text }}</h3>
                <button form="help_modals" class="pull-right hm-help btn btn-primary btn-sm" data-toggle="modal" data-target="#specials_Form_Modal">
                    <i class="fa fa-info" aria-hidden="true"></i> - {{ help_name }} 
                </button>
            </div>
            <div class="panel-body top-pad">
                <div class="col-sm-12">
                    <form action="{{ action }}" method="post" enctype="multipart/form-data" id="specials_discount_form" class="form-horizontal">
                        <legend>{{ specials_discount_text }}</legend>
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <td class="text-center" style="width: 25%;">
                                        <label class="control-label">
                                            <span data-toggle="tooltip" title="" data-original-title="{{ entry_title }}">
                                                {{ entry_title }} 
                                            </span>
                                        </label>
                                    </td>
                                    <td class="text-center" style="width: 75%;">
                                        <label class="control-label">
                                            <span data-toggle="tooltip" title="" data-original-title="{{ entry_description }}">
                                                {{ entry_description }} 
                                            </span>
                                        </label>
                                    </td>
                                </tr>
                            </thead>
                            <tbody>
                                <tr class="text-center">
                                    <td class="text-center">
                                        {% for language in languages %} 
                                        {% if (error_name[language['language_id']] is defined) %} 
                                        <div class="text-danger">{{ error_name[language['language_id']] }}</div>
                                        {% endif %} 
                                        <div class="input-group pull-left"><span class="input-group-addon"><img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}" /></span>
                                            <input type="text" name="product_discount[name][{{ language['language_id'] }}]"
                                                   value="{{ product_discount['name'][language['language_id']] is defined ? product_discount['name'][language['language_id']] : '' }}" class="form-control" />
                                        </div>
                                        {% endfor %} 
                                    </td>
                                    <td class="text-center">
                                        <textarea style="resize:vertical;" name="product_discount[description]" class="form-control">{{ product_discount['description'] is defined? product_discount['description'] : '' }}</textarea>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </form>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <hr>
                    <div class="panel-heading text-center ">
                        <h3 class="text-center panel-title"><i class="fa fa-copyright" aria-hidden="true"></i> {{ description_author }}</h3>
                    </div>
                    <br>
                    <div class="text-center">
                        <button form="help_modals" class="hm-info btn btn-primary btn-sm" data-toggle="modal" data-target="#Authors_Modal">
                            {{ description_author_start }} 
                        </button>
                    </div>
                    <hr>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Start Modal specials -->
<div class="modal fade" id="specials_Form_Modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><i class="fa fa-times" aria-hidden="true"></i></button>
                <h4 class="modal-title" id="myModalLabel"><i class="fa fa-cogs"></i> {{ help_name_specials }}</h4>
            </div>
            <div class="modal-body">
                <legend>{{ help_text }}</legend>
                <div class="text-center">{{ help_first_specials }}</div>
                <div class="helper-info">{{ help_second_specials }}</div>
                <div class="text-center">{{ help_name_title }}</div>
                <div class="helper-info">{{ help_list }}</div>
                <div class="text-center">{{ help_warning }}</div>
                <div class="helper-info">{{ help_end }}</div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal"> {{ help_ok }}</button>
            </div>
        </div>
    </div>
</div>
<!-- Start Modal HELPER Authors -->
<div class="modal fade" id="Authors_Modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><i class="fa fa-times" aria-hidden="true"></i></button>
                <h4 class="modal-title" id="myModalLabel"><i class="fa fa-cogs"></i> {{ description_author }}</h4>
            </div>
            <div class="modal-body">
                <legend>{{ description_copyright }}</legend>
                <div class="text-center">{{ description_author_copyright }}</div>
                <div class="text-center">{{ thank_you }}</div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal"> {{ help_ok }}</button>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript"><!--

    $(document).ready(function () {
        $('body').addClass('hyper-page hl-specials');
    });

    //--></script>
{{ footer }}