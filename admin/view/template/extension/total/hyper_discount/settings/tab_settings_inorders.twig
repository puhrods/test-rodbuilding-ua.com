<legend>
    <i class="fa fa-sort-numeric-asc" aria-hidden="true"></i> {{ tab_name_settings_inorders }} 
    <button form="help_modals" class="pull-right hm-help btn btn-primary btn-sm" data-toggle="modal" data-target="#Inorders_Modal">
        <i class="fa fa-info" aria-hidden="true"></i> - {{ help_name }} 
    </button>
</legend>
<div class="row">
    <div class="panel-body">
        
            <div class="form-group">
                <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
                <div class="col-sm-10">
                    <select name="total_hyper_discount_status" id="input-status" class="form-control">
                        {% if (total_hyper_discount_status) %} 
                            <option value="1" selected="selected">{{ text_enabled }}</option>
                            <option value="0">{{ text_disabled }}</option>
                        {% else %} 
                            <option value="1">{{ text_enabled }}</option>
                            <option value="0" selected="selected">{{ text_disabled }}</option>
                        {% endif %} 
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" for="input-sort-order">{{ entry_sort_order }}</label>
                <div class="col-sm-10">
                    <input type="text" name="total_hyper_discount_sort_order" value="{{ total_hyper_discount_sort_order }}" placeholder="{{ entry_sort_order }}" id="input-sort-order" class="form-control" />
                </div>
            </div>
     
    </div>
</div>

<!-- Start Modal inorders -->
<div class="modal fade" id="Inorders_Modals-11" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><i class="fa fa-times" aria-hidden="true"></i></button>
                <h4 class="modal-title" id="myModalLabel"><i class="fa fa-star-o" aria-hidden="true"></i> {{ help_name_inorders }}</h4>
            </div>
            <div class="modal-body">
                <div class="text-center">{{ help_text }}</div>
                <div class="helper-info">{{ help_description_inorders }}</div>
                <div class="text-center">{{ help_third_inorders }}</div>
                <div class="helper-info">{{ help_fourth_inorders }}</div>
                <div class="text-center">{{ help_fifth_inorders }}</div>
                <div class="helper-info">{{ help_sixth_inorders }}</div>
                <div class="text-center">{{ help_seventh_inorders }}</div>
                <div class="helper-info">{{ help_eighth_inorders }}</div>
                <div class="text-center">{{ help_thirteenth_inorders }}</div>
                <div class="helper-info">{{ help_fourteenth_inorders }}</div>
                <div class="text-center">{{ help_first_inorders }}</div>
                <div class="helper-info">{{ help_second_inorders }}</div>
                <div class="text-center">{{ help_warning }}</div>
                <div class="helper-info">{{ help_end }}</div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal"> {{ help_ok }}</button>
            </div>
        </div>
    </div>
</div>
<!-- Start Modal HELPER Settings -->
<div class="modal fade" id="Inorders_Modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><i class="fa fa-times" aria-hidden="true"></i></button>
                <h4 class="modal-title" id="myModalLabel"><i class="fa fa-cogs"></i> {{ help_name_inorders }}</h4>
            </div>
            <div class="modal-body">
                <legend>{{ help_text_inorders }}</legend>
                <div class="text-center">{{ help_first_settings_inorders }}</div>
                <div class="helper-info">{{ help_second_settings_inorders }}</div>
                <div class="text-center">{{ help_third_settings_inorders }}</div>
                <div class="helper-info">{{ help_fourth_settings_inorders }}</div>
                <div class="text-center">{{ help_warning }}</div>
                <div class="helper-info">{{ help_end }}</div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal"> {{ help_ok }}</button>
            </div>
        </div>
    </div>
</div>

