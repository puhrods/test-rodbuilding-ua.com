{% if may_advanced_options %}
<div id="may-advanced-options" class="hidden">
{{ may_advanced_options_template.hidden }}
{% if not options or options|length == 0 %}
<h3>{{ text_option }}</h3>
{% endif %}
{{ may_advanced_options_template.options }}
</div>
{{ may_advanced_options_template.style }}
{{ may_advanced_options_template.js_helper }}
{{ may_advanced_options_template.js_plugin }}
<script type="text/javascript"><!--
$('#product .form-group').eq(0).before($('#may-advanced-options').html());
$('#may-advanced-options').remove();

$('#product').mayAdvancedOptions({
	prices: {
		price: MayHelper.Price.toNumber("{{ price }}"),
		special: MayHelper.Price.toNumber("{{ special }}"),
		base: MayHelper.Price.toNumber("{{ tax }}")
	},
	point: parseInt("{{ points ? points : 0 }}"),
	weight: parseFloat("{{ weight_value ? weight_value : 0 }}"),

	actionButtonSelector: ['#button-cart'],
	quantityErrorBefore: $('input[name="quantity"]'),
	quantityErrorMessage: "{{ may_advanced_options_language['error_option_stock'] }}",

	preselect: {
		id: {{ preselected_option_value_id ?: 0 }},
		wait: 0
	},

	currentProductId: {{ product_id }},
	selectFirstOption: {{ may_advanced_options_config['select_first_option'] }}
},{
	model: function(option) {
		if (option.model != undefined && option.model != "") {
			var $elem = $('{{ is_quick_view ? '.quickview-container' : '#content' }} ul.list-unstyled:first li').eq({{ manufacturer ? 1 : 0 }}).find('span.disc1');
			if ($elem.length) {
				$elem.html(' ' + option.model);
			}
			$('input:hidden[name=\'option[model]\']').val(option.model);

			return true;
		}

		return false;
	},
	sku: function(option) {
		if (option.sku != undefined && option.sku != "") {
			{% if not may_advanced_options_config['hide_pp_sku'] %}
			var $elem = $('{{ is_quick_view ? '.quickview-container' : '#content' }} ul.list-unstyled:first li.product-sku span.disc1');
			if ($elem.length) {
				$elem.html(' ' + option.sku);
			} else {
				$('{{ is_quick_view ? '.quickview-container' : '#content' }} ul.list-unstyled:first').append('<li class="product-sku"><span class="disc">{{ may_advanced_options_language['text_sku'] }}:</span> <span class="disc1"> ' + option.sku + '</span></li>');
			}
			{% endif %}
			$('input:hidden[name=\'option[sku]\']').val(option.sku);

			return true;
		}

		return false;
	},
	upc: function(option) {
		if (option.upc != undefined && option.upc != "") {
			{% if not may_advanced_options_config['hide_pp_upc'] %}
			var $elem = $('{{ is_quick_view ? '.quickview-container' : '#content' }} ul.list-unstyled:first li.product-upc span.disc1');
			if ($elem.length) {
				$elem.html(' ' + option.upc);
			} else {
				$('{{ is_quick_view ? '.quickview-container' : '#content' }} ul.list-unstyled:first').append('<li class="product-upc"><span class="disc">{{ may_advanced_options_language['text_upc'] }}:</span> <span class="disc1"> ' + option.upc + '</span></li>');
			}
			{% endif %}
			$('input:hidden[name=\'option[upc]\']').val(option.upc);

			return true;
		}

		return false;
	},
	ean: function(option) {
		if (option.ean != undefined && option.ean != "") {
			{% if not may_advanced_options_config['hide_pp_ean'] %}
			var $elem = $('{{ is_quick_view ? '.quickview-container' : '#content' }} ul.list-unstyled:first li.product-ean span.disc1');
			if ($elem.length) {
				$elem.html(' ' + option.ean);
			} else {
				$('{{ is_quick_view ? '.quickview-container' : '#content' }} ul.list-unstyled:first').append('<li class="product-ean"><span class="disc">{{ may_advanced_options_language['text_ean'] }}:</span> <span class="disc1"> ' + option.ean + '</span></li>');
			}
			{% endif %}
			$('input:hidden[name=\'option[ean]\']').val(option.sku);

			return true;
		}

		return false;
	},
	jan: function(option) {
		if (option.jan != undefined && option.jan != "") {
			{% if not may_advanced_options_config['hide_pp_jan'] %}
			var $elem = $('{{ is_quick_view ? '.quickview-container' : '#content' }} ul.list-unstyled:first li.product-jan span.disc1');
			if ($elem.length) {
				$elem.html(' ' + option.jan);
			} else {
				$('{{ is_quick_view ? '.quickview-container' : '#content' }} ul.list-unstyled:first').append('<li class="product-jan"><span class="disc">{{ may_advanced_options_language['text_jan'] }}:</span> <span class="disc1"> ' + option.jan + '</span></li>');
			}
			{% endif %}
			$('input:hidden[name=\'option[jan]\']').val(option.jan);

			return true;
		}

		return false;
	},
	isbn: function(option) {
		if (option.isbn != undefined && option.isbn != "") {
			{% if not may_advanced_options_config['hide_pp_isbn'] %}
			var $elem = $('{{ is_quick_view ? '.quickview-container' : '#content' }} ul.list-unstyled:first li.product-isbn span.disc1');
			if ($elem.length) {
				$elem.html(' ' + option.isbn);
			} else {
				$('{{ is_quick_view ? '.quickview-container' : '#content' }} ul.list-unstyled:first').append('<li class="product-isbn"><span class="disc">{{ may_advanced_options_language['text_isbn'] }}:</span> <span class="disc1"> ' + option.isbn + '</span></li>');
			}
			{% endif %}
			$('input:hidden[name=\'option[isbn]\']').val(option.isbn);

			return true;
		}

		return false;
	},
	mpn: function(option) {
		if (option.mpn != undefined && option.mpn != "") {
			{% if not may_advanced_options_config['hide_pp_mpn'] %}
			var $elem = $('{{ is_quick_view ? '.quickview-container' : '#content' }} ul.list-unstyled:first li.product-mpn span.disc1');
			if ($elem.length) {
				$elem.html(' ' + option.mpn);
			} else {
				$('{{ is_quick_view ? '.quickview-container' : '#content' }} ul.list-unstyled:first').append('<li class="product-mpn"><span class="disc">{{ may_advanced_options_language['text_mpn'] }}:</span> <span class="disc1"> ' + option.mpn + '</span></li>');
			}
			{% endif %}
			$('input:hidden[name=\'option[mpn]\']').val(option.mpn);

			return true;
		}

		return false;
	},
	location: function(option) {
		if (option.location != undefined && option.location != "") {
			{% if not may_advanced_options_config['hide_pp_location'] %}
			var $elem = $('{{ is_quick_view ? '.quickview-container' : '#content' }} ul.list-unstyled:first li.product-location span.disc1');
			if ($elem.length) {
				$elem.html(' ' + option.location);
			} else {
				$('{{ is_quick_view ? '.quickview-container' : '#content' }} ul.list-unstyled:first').append('<li class="product-location"><span class="disc">{{ may_advanced_options_language['text_location'] }}:</span> <span class="disc1"> ' + option.location + '</span></li>');
			}
			{% endif %}
			$('input:hidden[name=\'option[location]\']').val(option.location);

			return true;
		}

		return false;
	},
	dimension: function(option) {
		if (option.dimension_l != undefined && option.dimension_l != "") {
			var dimension = MayHelper.Number.toI18nString(option.dimension_l, 2) + '{{ length_unit }}';
			if (option.dimension_w) {
				dimension += ' x ' + MayHelper.Number.toI18nString(option.dimension_w, 2) + '{{ length_unit }}';
			}
			if (option.dimension_h) {
				dimension += ' x ' + MayHelper.Number.toI18nString(option.dimension_h, 2) + '{{ length_unit }}';
			}
			{% if not may_advanced_options_config['hide_pp_dimension'] %}
			var $elem = $('{{ is_quick_view ? '.quickview-container' : '#content' }} ul.list-unstyled:first li.product-dimension span.disc1');
			if ($elem.length) {
				$elem.html(dimension);
			} else {
				$('{{ is_quick_view ? '.quickview-container' : '#content' }} ul.list-unstyled:first').append('<li class="product-dimension"><span class="disc">{{ may_advanced_options_language['text_dimension'] }}:</span> <span class="disc1">' + dimension + '</span></li>');
			}
			{% endif %}
			$('input:hidden[name=\'option[dimension_l]\']').val(MayHelper.Number.toI18nString(option.dimension_l, 2));
			$('input:hidden[name=\'option[dimension_w]\']').val(MayHelper.Number.toI18nString(option.dimension_w, 2));
			$('input:hidden[name=\'option[dimension_h]\']').val(MayHelper.Number.toI18nString(option.dimension_h, 2));

			return true;
		}

		return false;
	},
	quantity: function(option, advancedOption) {
		if (option.subtract || option.quantity) {
			advancedOption.quantity = parseInt(option.quantity);
			if ((option.quantity == 0 && option.subtract != 1)) {
				option.quantity = '{{ may_advanced_options_language['text_instock'] }}';
				advancedOption.quantity = -1;
			}
			{% if not config_stock_display %}
			if (option.quantity > 0) option.quantity = '{{ may_advanced_options_language['text_instock'] }}';
			{% endif %}
			var elemIndex = {{ 1 + (manufacturer ? 1 : 0) + (reward ? 1 : 0) }};
			var $elem = $('{{ is_quick_view ? '.quickview-container' : '#content' }} ul.list-unstyled:first li').eq(elemIndex).find('span.disc1');
			if ($elem.length) {
				$elem.html(' ' + (advancedOption.quantity != 0 ? option.quantity : '<del>{{ may_advanced_options_language['text_instock'] }}</del>'));
			}

			if (advancedOption.quantity != 0) {
				$('#button-cart').prop('disabled', false);
			} else {
				$('#button-cart').prop('disabled', true);
			}

			return true;
		}

		return false;
	},
	stockStatus: function(option, advancedOption) {
		if (option.subtract == 1 && advancedOption.quantity == 0 && parseInt(option.stock_status_id)) {
			var elemIndex = {{ 1 + (manufacturer ? 1 : 0) + (reward ? 1 : 0) }};
			var $elem = $('{{ is_quick_view ? '.quickview-container' : '#content' }} ul.list-unstyled:first li').eq(elemIndex).find('span.disc1');
			if ($elem.length) {
				$elem.html(' ' + option.stock_status);
			}

			return true;
		}

		return false;
	},
	price: function(prices) {
		var price = MayHelper.Price.toString(prices.price);
		var special = MayHelper.Price.toString(prices.special);
		var base = MayHelper.Price.toString(prices.base);
		
		{% if not special %}
		$('{{ is_quick_view ? '.quickview-container' : '#content' }} ul.list-unstyled').eq(1).find('span.pro_price').html(price);
		{% else %}
		$('{{ is_quick_view ? '.quickview-container' : '#content' }} ul.list-unstyled').eq(1).find('li:first span.pro_oldprice').html(price);
		$('{{ is_quick_view ? '.quickview-container' : '#content' }} ul.list-unstyled').eq(1).find('span.pro_price').html(special);
		{% endif %} // not special
		{% if tax %}
		$('{{ is_quick_view ? '.quickview-container' : '#content' }} ul.list-unstyled').eq(1).find('li.tax').html("{{ text_tax }} " + base);
		{% endif %} // tax
	},
	point: function(point) {
		{% if points %}
		var elemIndex = 1;
		{% if special %}
		elemIndex ++;
		{% endif %}
		{% if tax %}
		elemIndex ++;
		{% endif %}
		var $elem = $('{{ is_quick_view ? '.quickview-container' : '#content' }} ul.list-unstyled').eq(1).find('li').eq(elemIndex);
		if ($elem.length) {
			$elem.html("{{ text_points }} " + point);
		}
		{% else %}
		var $elem = $('{{ is_quick_view ? '.quickview-container' : '#content' }} ul.list-unstyled').eq(1).find('li.product-points span');
		if ($elem.length) {
			$elem.html(point);
		} else if (point) {
			$('{{ is_quick_view ? '.quickview-container' : '#content' }} ul.list-unstyled').eq(1).append('<li class="product-points">{{ text_points }} <span>' + point + '</span></li>');
		}
		{% endif %}

	},
	weight: function(weight) {
		var $elem = $('{{ is_quick_view ? '.quickview-container' : '#content' }} ul.list-unstyled:first li.product-weight span.disc1');
		if ($elem.length) {
			$elem.html(MayHelper.Number.toI18nString(weight, 2) + '{{ weight_unit }}');
		} else if (weight) {
			$('{{ is_quick_view ? '.quickview-container' : '#content' }} ul.list-unstyled:first').append('<li class="product-weight"><span class="disc">{{ text_weight }}:</span> <span class="disc1">' + MayHelper.Number.toI18nString(weight, 2) + '{{ weight_unit }}</span></li>');
		}
		$('input:hidden[name=\'option[weight]\']').val(MayHelper.Number.toI18nString(weight, 2));
	},
	image: function(option) {
		if (option.product_images != undefined) {
			var newAdditionalImages = [];
			var newReplaceImages = [];
			var currentImagesCount = $('#{{ is_quick_view ? 'quick' : 'additional' }}-carousel div.image-additional').length;
			option.product_images.forEach(function(item, index) {
				if (item['origin'] == "") {
					return;
				}

				{% if is_quick_view %}
				if (newReplaceImages.length < currentImagesCount) {
					newReplaceImages.push('<div class="image-additional"><a><img data-image-large-src="' + item['popup'] + '" src="' + item['thumb'] + '"/></a></div>');
				} else {
					newAdditionalImages.push('<div class="image-additional"><a><img data-image-large-src="' + item['popup'] + '" src="' + item['thumb'] + '"/></a></div>');
				}
				{% else %}
				if (newReplaceImages.length < currentImagesCount) {
					newReplaceImages.push('<div class="image-additional"><a class="elevatezoom-gallery' + '" href="' + item['popup'] + '" data-image="' + item['popup'] + '" data-zoom-image="' + item['popup'] + '"><img src="' + item['thumb'] + '" width="100" height="100"/></a></div>');
				} else {
					newAdditionalImages.push('<div class="image-additional"><a class="elevatezoom-gallery' + '" href="' + item['popup'] + '" data-image="' + item['popup'] + '" data-zoom-image="' + item['popup'] + '"><img src="' + item['thumb'] + '" width="100" height="100"/></a></div>');
				}
				{% endif %}
			});

			if (!currentImagesCount) {
				if (newAdditionalImages.length) {
					$('.product-additional').append('<div id="{{ is_quick_view ? 'quick' : 'additional' }}-carousel" class="owl-carousel owl-theme clearfix"></div>');
					$('#{{ is_quick_view ? 'quick' : 'additional' }}-carousel').each(function () {
						if ($(this).closest('#column-left').length == 0 && $(this).closest('#column-right').length == 0) {
							$(this).addClass('owl-carousel owl-theme');
							const items = $(this).data('items') || 4;
							const sliderOptions = {
								loop: false,
								nav: true,
								navText: ['<i class="fa fa-angle-left"></i>','<i class="fa fa-angle-right"></i>'],
								dots: false,
								items: items,
								mouseDrag: false,
								touchDrag: false,
								pullDrag: false,
								rewind: false,
								autoplay: true,
								responsiveRefreshRate: 200,
								responsive: {
									0: { items: 1 },
									320: { items: ((items - 2) > 1) ? (items - 2) : 1 },
									376: { items: ((items - 1) > 1) ? (items - 1) : 1 },
									481: { items: items },
									541: { items: ((items - 1) > 1) ? (items - 1) : 1 },
									768: { items: ((items - 2) > 1) ? (items - 2) : 1 },
									992: { items: ((items - 1) > 1) ? (items - 1) : 1 },
									1200: { items: items }
									}
								};
								if (direction == 'rtl') sliderOptions['rtl'] = true;
								$(this).owlCarousel(sliderOptions);
						}
					});
					{% if not is_quick_view %}
					if($(window).width() > 991) {
						$('#additional-carousel a').click(function() {
							var smallImage = $(this).attr('data-image');
							var largeImage = $(this).attr('data-zoom-image');
							var ez = $('#zoom').data('elevateZoom');
							$('.product-content .thumbnail').attr('href', largeImage);
							ez.swaptheimage(smallImage, largeImage);
							image_index = $(this).index('#additional-carousel a');
							return false;
						});
					}
					{% endif %}
				}
			}

			var carousel = $('#{{ is_quick_view ? 'quick' : 'additional' }}-carousel');

			if (newReplaceImages.length == currentImagesCount) {
				carousel.trigger('replace.owl.carousel', newReplaceImages.join('') + newAdditionalImages.join(''));
			} else {
				for (var k=0;k<newReplaceImages.length;k++) {
					carousel.trigger('remove.owl.carousel', k);
					carousel.trigger('add.owl.carousel', [newReplaceImages[k], k]);
					{% if is_quick_view %}
					$('.image-additional img').eq(k).on(
						'click',
						(event) => {
							$('.pro-image img').attr('src',$(event.target).data('image-large-src'));
							$('.selected').removeClass('selected');
							$(event.target).addClass('selected');
							$('.pro-image img').prop('src', $(event.currentTarget).data('image-large-src'));
						}	  
					);
					{% endif %}
				}
			}
			
			carousel.trigger('refresh.owl.carousel');
			carousel.trigger('to.owl.carousel', 0);

			if (carousel.find('a.elevatezoom-gallery').length == 1) {
				carousel.hide();
			} else {
				carousel.show();
			}

			$('.product-additional .pro-image a').attr('href', carousel.find('a.elevatezoom-gallery').eq(0).attr('href'));
			$('.product-additional .pro-image a img').attr('src', carousel.find('a.elevatezoom-gallery').eq(0).attr('href'));

			{% if not is_quick_view %}
			var zoomCollection = $("img#zoom");
			var zoomData = $("img#zoom").data('elevateZoom');
			if (zoomData) {
				var zoomType = zoomData.options.zoomType;
				zoomCollection.removeData('elevateZoom');
				zoomCollection.removeData('zoomImage');
				$('.zoomContainer').remove();

				zoomCollection.attr('src', $('#{{ is_quick_view ? 'quick' : 'additional' }}-carousel a.elevatezoom-gallery').eq(0).data('image'));
				zoomCollection.data('zoom-image', $('#{{ is_quick_view ? 'quick' : 'additional' }}-carousel a.elevatezoom-gallery').eq(0).data('image'));
				$('#{{ is_quick_view ? 'quick' : 'additional' }}-carousel a.elevatezoom-gallery.active').removeClass('active');
				$('#{{ is_quick_view ? 'quick' : 'additional' }}-carousel a.elevatezoom-gallery').eq(0).addClass('active');

				zoomCollection.elevateZoom({
					zoomType : zoomType,
					lensSize :'250',
					easing:true,
					scrollZoom : true,
					gallery: 'additional-carousel',
					cursor: 'pointer',
					galleryActiveClass: "active",
				});
				
				var magnificPopup = zoomCollection.data('magnificPopup');
				if (magnificPopup != undefined) {
					magnificPopup.items = [];
					for (k=0;k<$('#{{ is_quick_view ? 'quick' : 'additional' }}-carousel a.elevatezoom-gallery').length;k++) {
						magnificPopup.items.push({src: $('#{{ is_quick_view ? 'quick' : 'additional' }}-carousel a.elevatezoom-gallery').eq(k).data('image')});
					}
				}
			}
			{% endif %}

			$('input:hidden[name=\'option[image]\']').val(option.product_images[0]['origin']);

			return true;
		}

		return false;
	}
});
--></script>
