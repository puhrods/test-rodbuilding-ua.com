{% set product = item_product['product_info'] %}
<div class="be-product-layout be-product-list col-xs-12">
    <div class="be-product-thumb" style="border-right: unset; border-left: unset;border-bottom: unset;margin-bottom: 0">
        <div class="image"><a href="{{ product['href'] }}"><img src="{{ product['thumb'] }}" alt="{{ product['name'] }}" title="{{ product['name'] }}" class="img-responsive" /></a></div>
        <div>
            <div class="be-caption">
                <h4><a href="{{ product['href'] }}">{{ product['name'] }}</a></h4>
                <p>{{ product['short_description'] }}</p>
                {% if (product['price']) %}
                    <p class="be-price">
                        {% if (not product['special']) %}
                            {{ product['price'] }}
                        {% else %}
                            <span class="be-price-new">{{ product['special'] }}</span> <span class="be-price-old">{{ product['price'] }}</span>
                        {% endif %}
                        {% if (product['tax']) %}
                            <span class="be-price-tax">{{ text_tax }} {{ product['tax'] }}</span>
                        {% endif %}
                    </p>
                {% endif %}
                {% if (product['rating']) %}
                    <div class="rating hidden">
                        {% set i = 1 %}{% for i in i..5 %}
                            {% if (product['rating'] < i) %}
                                <span class="fa fa-stack"><i class="fa fa-star-o fa-stack-2x"></i></span>
                            {% else %}
                                <span class="fa fa-stack"><i class="fa fa-star fa-stack-2x"></i><i class="fa fa-star-o fa-stack-2x"></i></span>
                            {% endif %}
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
            <div class="button-group1" style="border-left: 0px solid #ddd;">
                <button type="button" class="btn btn-primary" onclick="cart.add('{{ product['product_id'] }}', '{{ product['minimum'] }}');"><i class="fa fa-shopping-cart"></i> <span class="hidden-xs hidden-sm hidden-md">{{ button_cart }}</span></button>
                <button class="hidden" type="button" data-toggle="tooltip" title="{{ button_wishlist }}" onclick="wishlist.add('{{ product['product_id'] }}');"><i class="fa fa-heart"></i></button>
                <button class="hidden" type="button" data-toggle="tooltip" title="{{ button_compare }}" onclick="compare.add('{{ product['product_id'] }}');"><i class="fa fa-exchange"></i></button>
            </div>
        </div>
    </div>
</div>